extends layout
block content
  div(class='container-fluid h-100')
    div(class="row justify-content-center h-100")
      div(class="col-md-8 col-xl-6 chat")
        div(class="card")
          div(class="card-header msg_head")
            div(class="d-flex bd-highlight")
              div(class="img_cont")
                img(src="https://www.pikpng.com/pngl/m/259-2592784_messenger-facebook-messenger-icon-clipart.png" alt="Messenger - Facebook Messenger Icon Clipart@pikpng.com" class="rounded-circle user_img")
                span.online_icon
                div.user_info
                  span Chat with Khalid
                  p 1767 Messages
                div.video_cam
                  span
                    i(class="fas fa-video")
                  span
                    i(class="fas fa-phone")
            div(class="card-body msg_card_body")
              div(class="d-flex justify-content-start mb-4")
                div(class="img_cont_msg")
                  img(src="https://www.pikpng.com/pngl/m/259-2592784_messenger-facebook-messenger-icon-clipart.png" alt="Messenger - Facebook Messenger Icon Clipart@pikpng.com" class="rounded-circle user_img_msg")
                div.msg_cotainer
                  | Hi, how are you samim?
              div(class="d-flex justify-content-end mb-4")
                div.msg_cotainer_send
                  | Hi Khalid i am good tnx how about you?
                div.img_cont_msg
                  img(src="https://www.pikpng.com/pngl/m/259-2592784_messenger-facebook-messenger-icon-clipart.png" alt="Messenger - Facebook Messenger Icon Clipart@pikpng.com" class="rounded-circle user_img_msg")
              div(class="d-flex justify-content-start mb-4")
                div.img_cont_msg
                  img(src="https://www.pikpng.com/pngl/m/259-2592784_messenger-facebook-messenger-icon-clipart.png" alt="Messenger - Facebook Messenger Icon Clipart@pikpng.com" class="rounded-circle user_img_msg")
                div.msg_cotainer
                  | I am good too, thank you for your chat template
              div(class="d-flex justify-content-end mb-4")
                div.msg_cotainer_send
                  | You are welcome
                div.img_cont_msg
                  img(src="https://www.pikpng.com/pngl/m/259-2592784_messenger-facebook-messenger-icon-clipart.png" alt="Messenger - Facebook Messenger Icon Clipart@pikpng.com" class="rounded-circle user_img_msg")
            div.card-footer
              div.input-group
                div.input-group-append
                  span(class="input-group-text attach_btn")
                    i(class="fas fa-paperclip")
                textarea(name="" class="form-control type_msg" placeholder="Type your message...")
                div.input-group-append
                  span(class="input-group-text send_btn")
                    i(class="fas fa-location-arrow")